# ============================================
# REQUIRED - Application will not start without these
# ============================================

# Database Configuration (REQUIRED)
# Must be a valid PostgreSQL connection string
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=ai_chat
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT Secret (REQUIRED)
# MUST be at least 32 characters for security
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_required_for_security

# OpenRouter API Key (REQUIRED)
# Get your key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================
# OPTIONAL - Defaults will be used if not set
# ============================================

# Redis Configuration (Optional - recommended for production)
# If not set, caching will be disabled
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# Frontend URL (Optional - defaults to http://localhost:3000)
# Used for CORS configuration
FRONTEND_URL=http://localhost:3000

# API Configuration (Optional - defaults provided)
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
LOG_LEVEL=info

# Next.js Frontend (Optional - defaults to http://localhost:3001)
NEXT_PUBLIC_API_URL=http://localhost:3001
