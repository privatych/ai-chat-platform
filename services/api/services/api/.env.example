# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_chat

# JWT Secret (минимум 32 символа)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-please-change-this

# OpenRouter API Key
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Frontend URL (для CORS и редиректов)
FRONTEND_URL=http://localhost:3000
WEB_URL=http://localhost:3000

# SMTP Configuration (для отправки email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@ai-chat-platform.com

# Redis (опционально, для кэширования)
# REDIS_URL=redis://localhost:6379
